@{
    ViewData["Title"] = "Home Page";
}

@model WebApplication2.Models.Student

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="SecondName" class="control-label">Фамилия</label>
        <input asp-for="SecondName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Отчество</label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Height" class="control-label">Рост</label>
        <input asp-for="Height" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDay" class="control-label">День рождения</label>
        <input asp-for="BirthDay" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Group" class="control-label">Группа</label>
        <input asp-for="Group" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Speciality" class="control-label">Специальность</label>
        <input asp-for="Speciality" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Scholarship" class="control-label">Стипендия</label>
        <input asp-for="Scholarship" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

